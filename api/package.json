{
  "name": "connect-plus-nextgen-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "prisma": {
    "seed": "tsx prisma/seed/seed.ts"
  },
  "scripts": {
    "build": "nest build",
    "docker": "docker-compose up -V --build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "seed": "npx tsx prisma/seed/seed.ts",
    "start": "npm run migrate:deploy && npm run sync && npm run seed && nest start",
    "start:dev": "nest start --debug --watch",
    "start:prod": "npm run migrate:deploy && npm run prisma:generate && npm run snaplet:deploy && node dist/src/main",
    "sync": "npx @snaplet/seed sync",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrate": "prisma migrate dev --skip-seed",
    "migrate:deploy": "prisma migrate deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "npx prisma generate",
    "snaplet:generate": "npx @snaplet/seed generate",
    "snaplet:deploy": "npm run sync && npm run seed",
    "local:docker": "docker build --tag 'docker-pipeline-test' . && Docker run --network host 'docker-pipeline-test'"
  },
  "dependencies": {
    "@azure/arm-eventgrid": "^14.2.0-beta.4",
    "@azure/identity": "^4.5.0",
    "@azure/storage-blob": "^12.23.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@okta/jwt-verifier": "^3.2.0",
    "@okta/okta-sdk-nodejs": "^7.1.0",
    "@prisma/client": "^6.0.1",
    "@snaplet/copycat": "^5.0.0",
    "@snaplet/seed": "^0.97.20",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "cache-manager": "^5.6.1",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "moment": "^2.30.1",
    "mqtt": "^5.8.1",
    "nest-winston": "^1.10.0",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "prisma-erd-generator": "^1.11.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.5.0",
    "@mermaid-js/mermaid-cli": "^10.9.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cache-manager-redis-store": "^2.0.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/moment": "^2.13.0",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.7",
    "prettier": "^3.0.0",
    "prisma": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.ts",
      "!**/*.interface.ts",
      "!**/*.dto.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "clearMocks": true
  },
  "@snaplet/seed": {
    "config": "prisma/seed/seed.config.ts"
  }
}
